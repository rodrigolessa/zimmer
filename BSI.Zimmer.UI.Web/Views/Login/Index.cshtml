@model BSI.Zimmer.UI.Web.Controller.ViewModel.LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutNaoAutenticado.cshtml";
}

@Scripts.Render("~/bundles/ViewModel")

@section Scripts
{
    <style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 400px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }

            .form-signin .form-signin-heading,
            .form-signin .checkbox {
                margin-bottom: 10px;
                width:400px;
            }

            .form-signin input[type="text"],
            .form-signin input[type="password"] {
                font-size: 16px;
                height: auto;
                margin-bottom: 15px;
                padding: 7px 9px;
            }
    </style>

    <script>

        var config = {
            initialData : @Html.Raw(Json.Encode(Model)),
            urlLogar : "@Url.Action("Logar")",
            urlAutenticado : "@Url.Action("Index", "DashBoard")",
            urlCriarLogin : "@Url.Action("Criar")"
            };

        jQuery(document).ready(function () {
            ko.applyBindings(new LoginViewModel(config.initialData));
        });
    </script>
}

<div class="container">
    <form class="form-signin">
        <h2 class="form-signin-heading">Por favor, seu login</h2>
        <input type="text" data-bind="value: Login" class="input-block-level" placeholder="Seu login">
        <input type="password" data-bind="value: Senha" class="input-block-level" placeholder="Sua senha">        
        <button class="btn btn-large btn-primary" data-bind="click: Logar" type="submit">Logar</button>
        
    </form>

    <form class="form-signin">
        <a href="#" data-bind="click: CriarLogin">meu primeiro acesso</a>
    </form>
</div>
